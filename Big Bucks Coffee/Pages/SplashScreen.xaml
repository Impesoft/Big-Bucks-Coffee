<Page x:Class="Big_Bucks_Coffee.SplashScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Big_Bucks_Coffee"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SplashScreen">
    <Page.Background>
        <ImageBrush ImageSource="/Assets/Coffee-Beans.jpg" Stretch="Uniform" TileMode="FlipXY" AlignmentX="Left" AlignmentY="Top" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="Absolute" Viewport="0,0,1920,1200"></ImageBrush>
    </Page.Background>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image Height="500" Width="540" HorizontalAlignment="Left" VerticalAlignment="Top" Source="/Pages/Splash.png" MouseLeftButtonUp="SplashScreenClick" />
    </Grid>
</Page>