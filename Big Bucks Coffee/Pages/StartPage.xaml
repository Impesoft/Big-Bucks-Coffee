<Page x:Name="Big_Bucks_Coffee" x:Class="Big_Bucks_Coffee.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Big_Bucks_Coffee"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Big Bucks Coffee">
    <Page.Background>
        <ImageBrush ImageSource="/Assets/Coffee-Beans.jpg" Stretch="Uniform" TileMode="FlipXY" AlignmentX="Left" AlignmentY="Top" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="Absolute" Viewport="0,0,1920,1200"></ImageBrush>
    </Page.Background>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible">
        <Grid x:Name="myGrid">
            <WrapPanel x:Name="myWrap"  HorizontalAlignment="Center" VerticalAlignment="Center">
            </WrapPanel>
        </Grid>
    </ScrollViewer>
</Page>