<Window x:Class="Big_Bucks_Coffee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Big_Bucks_Coffee"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Window.Background>
        <ImageBrush ImageSource="/Assets/Coffee-Beans.jpg" Stretch="Uniform" TileMode="FlipXY" AlignmentX="Left" AlignmentY="Top" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="Absolute" Viewport="0,0,1920,1200"></ImageBrush>
    </Window.Background>
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible">
        <WrapPanel x:Name="myWrap"  ScrollViewer.CanContentScroll="True" />
    </ScrollViewer>
</Window>